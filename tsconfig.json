{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@scaffai/core": ["./packages/core/src"],
      "@scaffai/core/*": ["./packages/core/src/*"],
      "@scaffai/ui": ["./packages/ui/src"],
      "@scaffai/ui/*": ["./packages/ui/src/*"],
      "@scaffai/scaffold-engine": ["./packages/scaffold-engine/src"],
      "@scaffai/scaffold-engine/*": ["./packages/scaffold-engine/src/*"]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/.next",
    "**/dist",
    "**/build"
  ]
}